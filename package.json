{
  "name": "e-surveyor",
  "version": "1.0.0",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "deploy": "vercel --prod -A other/now.json -t $VERCEL_TOKEN --confirm",
    "deploy:production": "bitrise ci",
    "clean": "rm -rf build resources",
    "test": "jest --silent --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch test",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .ts --ext .tsx --ext .js && echo '\\033[37;42;1m PASS \\033[00m'",
    "test:acceptance": "cd other && newman run postman_collection.json --bail --env-var plantnet_api_key=${PLANT_NET_API_KEY}",
    "fetch:data": "cd src/common/data && mkdir -p remote && node make.js",
    "fetch:species:data": "cd src/common/data/species && node make.js",
    "fetch:species:commonNames": "cd src/common/data/commonNames && node make.js"
  },
  "dependencies": {
    "@bit/flumens.apps.attr-page": "^3.0.14",
    "@bit/flumens.apps.collapse": "^0.2.0",
    "@bit/flumens.apps.date": "^0.2.1",
    "@bit/flumens.apps.device": "0.2.1",
    "@bit/flumens.apps.gallery": "2.0.2",
    "@bit/flumens.apps.header": "^0.7.0",
    "@bit/flumens.apps.helpers.alert": "1.0.0",
    "@bit/flumens.apps.helpers.loader": "0.1.1",
    "@bit/flumens.apps.helpers.toast": "^0.3.0",
    "@bit/flumens.apps.info-background-message": "1.0.1",
    "@bit/flumens.apps.info-message": "^1.2.1",
    "@bit/flumens.apps.input-with-validation": "0.4.1",
    "@bit/flumens.apps.long-press-button": "1.0.0",
    "@bit/flumens.apps.main": "0.2.2",
    "@bit/flumens.apps.menu-attr-item": "^1.2.4",
    "@bit/flumens.apps.menu-attr-toggle": "^1.0.3",
    "@bit/flumens.apps.menu-note-item": "^0.2.3",
    "@bit/flumens.apps.modal-header": "0.1.4",
    "@bit/flumens.apps.model-location-map": "3.1.4",
    "@bit/flumens.apps.models.drupal-user-model": "^0.7.4",
    "@bit/flumens.apps.models.init-stored-samples": "^0.1.0",
    "@bit/flumens.apps.models.media": "^0.2.4",
    "@bit/flumens.apps.models.model": "^0.1.0",
    "@bit/flumens.apps.models.occurrence": "^0.4.0",
    "@bit/flumens.apps.models.sample": "^1.0.0",
    "@bit/flumens.apps.models.store": "^0.4.0",
    "@bit/flumens.apps.page": "^1.1.0",
    "@bit/flumens.apps.photo-picker": "^2.2.0",
    "@bit/flumens.apps.route-with-models": "^1.0.0",
    "@bit/flumens.apps.section": "^0.4.1",
    "@bit/flumens.apps.utils.analytics": "^0.2.0",
    "@bit/flumens.apps.utils.location": "0.1.7",
    "@bit/flumens.apps.utils.validation": "0.3.4",
    "@capacitor/android": "^3.3.3",
    "@capacitor/app": "^1.0.7",
    "@capacitor/camera": "^1.2.2",
    "@capacitor/core": "^3.3.3",
    "@capacitor/filesystem": "^1.0.6",
    "@capacitor/geolocation": "^1.3.0",
    "@capacitor/haptics": "^1.1.3",
    "@capacitor/ios": "^3.3.3",
    "@capacitor/keyboard": "^1.2.0",
    "@capacitor/splash-screen": "^1.2.0",
    "@capacitor/status-bar": "^1.0.6",
    "@indicia-js/core": "^6.1.0",
    "@indicia-js/remote": "^6.1.2",
    "@ionic-native/core": "^5.36.0",
    "@ionic/core": "^6.0.1",
    "@ionic/react": "^6.0.1",
    "@ionic/react-router": "^6.0.1",
    "chart.js": "^2.0.0",
    "cordova-plugin-network-information": "^3.0.0",
    "cordova-sqlite-storage": "^6.0.0",
    "formik": "^2.2.9",
    "i18next": "^21.6.0",
    "ionicons": "^6.0.0",
    "leaflet": "^1.6.0",
    "localforage": "^1.10.0",
    "localforage-cordovasqlitedriver": "1.8.0",
    "lodash": "^4.17.21",
    "mobx": "^6.3.9",
    "mobx-react": "^7.2.1",
    "prop-types": "15.7.2",
    "prop-types-exact": "^1.2.0",
    "react": "^17.0.2",
    "react-chartjs-2": "^2.11.1",
    "react-countup": "^6.1.0",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.1",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "swiper": "^7.4.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-decorators": "^7.16.5",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@capacitor/cli": "^3.3.3",
    "@flumens/eslint-config": "^2.0.0",
    "@flumens/fetch-onedrive-excel": "^0.2.1",
    "@flumens/webpack-config": "^3.0.1",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.2",
    "axios": "^0.24.0",
    "babel-jest": "^27.4.5",
    "babel-plugin-module-resolver": "4.1.0",
    "cordova-res": "^0.15.4",
    "csv": "^6.0.4",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-transform-stub": "^2.0.0",
    "mock-geolocation": "1.0.11",
    "newman": "^5.3.0",
    "postcss": "^8.4.5",
    "regenerator-runtime": "^0.13.9",
    "sharp-cli": "^1.15.0",
    "typescript": "4.5.4",
    "vercel": "^23.1.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": [
    "Android >= 5.1",
    "iOS >= 12"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlumensIO/e-surveyor-app"
  },
  "bugs": {
    "url": "https://github.com/FlumensIO/e-surveyor-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "android": "5.1",
            "ios": "10.2"
          },
          "modules": "commonjs",
          "corejs": "3.0.0",
          "useBuiltIns": "usage"
        }
      ],
      "@babel/react",
      "@babel/typescript"
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components",
            "Surveys": "./src/Surveys"
          }
        }
      ],
      [
        "@babel/proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      "@babel/transform-exponentiation-operator",
      [
        "@babel/proposal-private-methods",
        {
          "loose": true
        }
      ],
      [
        "@babel/proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@flumens"
    ],
    "rules": {
      "react/function-component-definition": 0,
      "arrow-body-style": 0,
      "camelcase": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "prefer-arrow-callback": 0,
      "react/no-unused-class-component-methods": 0,
      "sort-class-members/sort-class-members": 0,
      "react/prop-types": 0,
      "react/jsx-no-useless-fragment": 0,
      "@typescript-eslint/no-empty-function": 0,
      "react/jsx-no-bind": 0,
      "class-methods-use-this": 0,
      "@typescript-eslint/no-var-requires": 0,
      "no-restricted-exports": 0,
      "default-param-last": 0,
      "@typescript-eslint/no-this-alias": 0,
      "@getify/proper-arrows/name": 0
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/typescript@3.1.53"
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/env"
          ]
        }
      ]
    },
    "testRegex": "((src/\\.|/*.)(spec))\\.js?$",
    "moduleNameMapper": {
      "^.+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@bit|@stencil|ionicons)"
    ]
  }
}
