{
  "name": "e-surveyor",
  "version": "1.0.0",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && NODE_ENV=production npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "deploy": "cp other/demo.html build/ && URL=$(vercel -t $VERCEL_TOKEN --confirm ./build) && CLEAN_URL=$(echo $URL | sed -r \"s/https:\\/\\/(.*)$/\\1/g\") && DEMO_URL=$(echo $CLEAN_URL | sed -r \"s/(.*\\-)[a-z0-9]+\\-flumens(\\.vercel\\.app)$/\\1${BITRISE_BUILD_NUMBER}\\2/g\") && vercel alias set $CLEAN_URL $DEMO_URL -t $VERCEL_TOKEN && envman add --key DEMO_URL --value \"https://$DEMO_URL\"",
    "deploy:production": "bitrise ci",
    "clean": "rm -rf build resources",
    "test": "jest --silent --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch test",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .ts --ext .tsx --ext .js && echo '\\033[37;42;1m PASS \\033[00m'",
    "test:acceptance": "cd other && newman run postman_collection.json --bail --env-var plantnet_api_key=${PLANT_NET_API_KEY}",
    "fetch:data": "cd src/common/data && mkdir -p remote && node make.js",
    "fetch:species:data": "cd src/common/data/species && node make.js",
    "fetch:species:commonNames": "cd src/common/data/commonNames && node make.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@capacitor-community/camera-preview": "^3.0.0",
    "@capacitor/android": "^3.5.1",
    "@capacitor/app": "^1.1.1",
    "@capacitor/camera": "^1.3.1",
    "@capacitor/core": "^3.5.1",
    "@capacitor/filesystem": "^1.0.6",
    "@capacitor/geolocation": "^1.3.0",
    "@capacitor/haptics": "^1.1.3",
    "@capacitor/ios": "^3.5.1",
    "@capacitor/keyboard": "^1.2.0",
    "@capacitor/network": "^1.0.7",
    "@capacitor/splash-screen": "^1.2.0",
    "@capacitor/status-bar": "^1.0.6",
    "@flumens/bigu": "^0.4.0",
    "@flumens/ionic": "1.0.0-rc.11",
    "@indicia-js/core": "^6.1.0",
    "@indicia-js/remote": "^6.1.4",
    "@ionic-native/core": "^5.36.0",
    "@ionic/core": "^6.1.4",
    "@ionic/react": "^6.1.4",
    "@ionic/react-router": "^6.1.4",
    "@sentry/browser": "^6.19.7",
    "@sentry/integrations": "^6.19.7",
    "chart.js": "^2.0.0",
    "clsx": "^1.1.1",
    "cordova-sqlite-storage": "^6.0.0",
    "deep-diff": "^1.0.2",
    "formik": "^2.2.9",
    "i18next": "^21.6.16",
    "ionicons": "^6.0.0",
    "jwt-decode": "^3.1.2",
    "leaflet": "^1.8.0",
    "localforage": "^1.10.0",
    "localforage-cordovasqlitedriver": "1.8.0",
    "lodash": "^4.17.21",
    "mobx": "^6.5.0",
    "mobx-react": "^7.2.1",
    "mobx-utils": "^6.0.5",
    "proj4": "^2.8.0",
    "proj4leaflet": "^1.0.2",
    "react": "^17.0.2",
    "react-autosuggest": "^10.1.0",
    "react-chartjs-2": "^2.11.1",
    "react-countup": "^6.2.0",
    "react-dom": "^17.0.2",
    "react-easy-crop": "^4.2.0",
    "react-i18next": "^11.16.8",
    "react-leaflet": "^3.2.5",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "swiper": "^8.1.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-decorators": "^7.17.9",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@capacitor/cli": "^3.5.1",
    "@flumens/eslint-config": "^2.0.1",
    "@flumens/fetch-onedrive-excel": "^0.3.0",
    "@flumens/webpack-config": "^4.1.2",
    "@types/jest": "^27.5.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.2",
    "axios": "^0.27.2",
    "babel-jest": "^28.0.3",
    "babel-plugin-module-resolver": "4.1.0",
    "cordova-res": "^0.15.4",
    "csv": "^6.0.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "jest-environment-jsdom": "^28.0.2",
    "jest-transform-stub": "^2.0.0",
    "mock-geolocation": "1.0.11",
    "newman": "^5.3.2",
    "postcss": "^8.4.13",
    "regenerator-runtime": "^0.13.9",
    "typescript": "^4.6.4",
    "vercel": "^24.2.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.9.0"
  },
  "browserslist": [
    "Android >= 5.1",
    "iOS >= 12"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlumensIO/e-surveyor-app"
  },
  "bugs": {
    "url": "https://github.com/FlumensIO/e-surveyor-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "android": "5.1",
            "ios": "10.2"
          },
          "modules": "commonjs",
          "corejs": "3.0.0",
          "useBuiltIns": "usage"
        }
      ],
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ],
      "@babel/typescript"
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens$": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components",
            "Surveys": "./src/Surveys"
          }
        }
      ],
      [
        "@babel/proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      "@babel/transform-exponentiation-operator",
      [
        "@babel/proposal-private-methods",
        {
          "loose": true
        }
      ],
      [
        "@babel/proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@flumens",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "react/function-component-definition": 0,
      "arrow-body-style": 0,
      "camelcase": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "prefer-arrow-callback": 0,
      "react/no-unused-class-component-methods": 0,
      "sort-class-members/sort-class-members": 0,
      "react/prop-types": 0,
      "react/jsx-no-useless-fragment": 0,
      "@typescript-eslint/no-empty-function": 0,
      "react/jsx-no-bind": 0,
      "class-methods-use-this": 0,
      "@typescript-eslint/no-var-requires": 0,
      "no-restricted-exports": 0,
      "default-param-last": 0,
      "@typescript-eslint/no-this-alias": 0,
      "@getify/proper-arrows/name": 0
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react-typescript@4.0.0"
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/env"
          ]
        }
      ]
    },
    "testRegex": "((src/\\.|/*.)(spec))\\.(t|j)s?$",
    "moduleNameMapper": {
      "^.+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@stencil|ionicons)"
    ]
  }
}
